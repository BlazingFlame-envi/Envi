{% extends 'baseback.html.twig' %}
{% block body %}
       <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" action="#" method="post">
                                       <h1 class="text-white text-center">Create Account</h1>
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'text-white text-danger'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom, 'Name') }}
                                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.prenom, 'Lastname') }}
                                {{ form_errors(form.prenom, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.role, 'Role') }}
                                {{ form_errors(form.role, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.mail, 'Email') }}
                                {{ form_errors(form.mail, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.motdepasse, 'Password') }}
                                {{ form_errors(form.motdepasse, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.motdepasse, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.DN, 'Date of birth') }}
                                {{ form_errors(form.DN, {'attr': {'class': 'text-danger'}}) }}
                                {{ form_widget(form.DN, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Sign Up</button>
                            </div>
                            {{ form_end(form) }}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>







       
        {% endblock %}
       